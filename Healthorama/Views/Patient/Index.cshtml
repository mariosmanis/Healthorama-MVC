
@{
    Layout = null;
}


<!-- Declare HTML5 -->
<!DOCTYPE html>
<!-- Start HTML -->
<html>
<!-- Start head -->
<head>
    <!-- Set meta tags -->
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!-- Set title -->
    <title>Home Page</title>
    <!-- Declare font -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <!-- Declare font -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <!-- Set icon -->
    <link rel="icon" href="Assets/Icons/main.ico" type="image/x-icon" />
    <!-- Set Material Kit CSS -->
    <link href="~/Content/material-dashboard.css" rel="stylesheet" />
    <!-- Start of custom style changes -->
    <style>
        /* Logout button */
        .button {
            background-color: transparent;
            border: none;
            cursor: pointer;
            text-decoration: none;
            padding: 0px;
            color: #3c4858;
        }
    </style>
    <!-- End of custom style changes -->
    <!-- End head -->
</head>
<!-- Start body -->
<body class="white-edition">
    <!-- Start wrapper div -->
    <div class="wrapper">
        <!-- Start sidebar div -->
        <div class="sidebar" data-color="purple" data-background-color="white">
            <!-- Start logo div -->
            <div class="logo">
                <!-- Set the logo -->
                <a class="simple-text logo-normal"> Healthorama <img src="~/Images/medical.png" alt="logo" /> </a>
                <!-- End logo div -->
            </div>
            <!-- Start sidebar-wrapper div -->
            <div class="sidebar-wrapper">
                <!-- Start nav list -->
                <ul class="nav">
                    <!-- Start class for the first element of the list -->
                    <li class="nav-item active">
                        <a class="nav-link" href=@Url.Action("Index","Patient")>
                            <!-- Set icon -->
                            <i class="material-icons">home</i>
                            <!-- Set text -->
                            <p>
                                <b>Home</b>
                            </p>
                        </a>
                        <!-- End class for the first element of the list -->
                    </li>
                    <!-- Start class for the second element of the list -->
                    <li class="nav-item">
                        <!-- Start class nav-link -->
                        <a class="nav-link" href=@Url.Action("SearchAppointment","Patient")>
                            <!-- Set icon -->
                            <i class="material-icons">add_box</i>
                            <!-- Set text -->
                            <p>
                                <b>Search for doctors</b>
                            </p>
                            <!-- End class nav-link -->
                        </a>
                        <!-- End class for the second element of the list -->
                    </li>
                    <!-- Start class for the third element of the list -->
                    <li class="nav-item">
                        <!-- Start class nav-link -->
                        <a class="nav-link" href=@Url.Action("ViewAppointments","Patient")>
                            <!-- Set icon -->
                            <i class="material-icons">calendar_today</i>
                            <!-- Set text -->
                            <p>
                                <b>My appointments</b>
                            </p>
                            <!-- End class nav-link -->
                        </a>
                        <!-- End class for the third element of the list -->
                    </li>
                    <!-- Start class for the forth element of the list -->
                    <li class="nav-item">
                        <!-- Start class nav-link -->
                        <a class="nav-link" href=@Url.Action("Patient","Home")>
                            <!-- Set icon -->
                            <i class="material-icons">logout</i>
                            <!-- Create button -->
                            <p>
                                <b>Logout</b>
                            </p>
                            <!-- End class nav-link -->
                        </a>
                        <!-- End class for the forth element of the list -->
                    </li>
                    <!-- End nav list -->
                </ul>
                <!-- End sidebar-wrapper div -->
            </div>
            <!-- End sidebar div -->
        </div>
        <!-- Start main-panel div -->
        <div class="main-panel">
            <!-- Start navbar class -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top">
                <!-- Start container-fluid div -->
                <div class="container-fluid">
                    <!-- Start navbar-wrapper div -->
                    <div class="navbar-wrapper">
                        <!-- Start navbar-brand -->
                        <a class="navbar-brand">
                            <b>Home Page</b>
                        </a>
                        <!-- End navbar-wrapper div -->
                    </div>
                    <!-- End container-fluid div -->
                </div>
                <!-- End navbar class -->
            </nav>
            <!-- Start content div -->
            <div class="content">
                <!-- Start container-fluid div -->
                <div class="container-fluid">
                    <!-- Start row div -->
                    <div class="row">
                        <!-- Start introductory note -->
                        <div class="col-sm-8">
                            We are so happy you 're here.The concept is simple. Healthorama helps you manage and arrange all of your medical appointments in just a few clicks. Underneath there is a list with all the available
                            options Healthorama offers.
                            <!-- End introductory note -->
                        </div>
                        <!-- End row div -->
                    </div>
                    <!-- Set space -->
                    <br />
                    <!-- Start definition list -->
                    <dl class="row">
                        <!-- Declare first definition term of the list -->
                        <dt class="col-sm-3">Home</dt>
                        <!-- Declare definition details for the first element of the list -->
                        <dd class="col-sm-9">Landing page of our application</dd>
                        <!-- Declare second definition term of the list -->
                        <dt class="col-sm-3 text-truncate">Search for doctors</dt>
                        <!-- Declare definition details for the second element of the list -->
                        <dd class="col-sm-9">Make a new appointment with the doctor of your selection.</dd>
                        <!-- Declare third definition term of the list -->
                        <dt class="col-sm-3">My appointments</dt>
                        <!-- Declare definition details for the third element of the list -->
                        <dd class="col-sm-9">View all the appointments you have made.</dd>
                        <!-- Declare forth definition term of the list -->
                        <dt class="col-sm-3">Log out</dt>
                        <!-- Declare definition details for the forth element of the list -->
                        <dd class="col-sm-9">Disconnect from our application.</dd>
                        <!-- End definition list -->
                    </dl>
                    <!-- End container-fluid div -->
                </div>
                <!-- End content div -->
            </div>
            <!-- End main-panel div -->
        </div>
        <!-- End wrapper div -->
    </div>


    <!-- Import jquery script -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <!-- Import popper script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <!-- Import bootstrap script -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!-- Control Center for Material Dashboard -->
    <script src="~/Scripts/material-dashboard.js"></script>

    <!-- End body -->
</body>
<!-- End HTML -->
</html>
