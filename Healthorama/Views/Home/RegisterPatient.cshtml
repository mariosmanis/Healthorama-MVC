@model Healthorama.Models.PATIENT



<link href="~/Content/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css" />



<!-- Start sign-up section -->
<section class="signup">
    <!-- Start container div -->
    <div class="container">
        <!-- Start sign-up content div -->
        <div class="signup-content">
            <!-- Start sign up form div -->
            <div class="signup-form">
                <!-- Declare form title -->
                <h2 class="form-title">Sign up</h2>
                <!-- Start register form -->
                @using (Html.BeginForm("RegisterPatient", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <!-- Start form group -->
                    <div class="form-group">
                        @Html.EditorFor(model => model.patientAMKA, new { htmlAttributes = new { @Placeholder = "AMKA" } })
                    </div>
                    <!-- Start form group -->
                    <div class="form-group">
                        @Html.EditorFor(model => model.patientName, new { htmlAttributes = new { @Placeholder = "Name" } })
                    </div>
                    <!-- Start form group -->
                    <div class="form-group">
                        @Html.EditorFor(model => model.patientSurname, new { htmlAttributes = new { @Placeholder = "Surname" } })
                    </div>
                    <!-- Start form group -->
                    <div class="form-group">
                        @Html.EditorFor(model => model.patientPassword, new { htmlAttributes = new { @Placeholder = "Password", @Type = "password" } })
                    </div>
                    <!-- Start form group -->
                    <div class="form-group form-button">
                        <input type="submit" name="name" value="Create account" />
                    </div>
                    <!-- End register form -->
                }
                <!-- End sign up form div -->
            </div>
            <!-- Start sign up image div -->
            <div class="signup-image">
                <!-- Start figure -->
                <figure>
                    <!-- Import image -->
                    <img src="~/Images/signin-image.jpg" alt="Sign up image" />
                    <!-- End figure -->
                </figure>
                <!-- Declare sign in link -->
                @Html.ActionLink("Already have an account ?", "Patient", "Home")
                <!-- End image div -->
            </div>
            <!-- End sign-up content div -->
        </div>
        <!-- End container div -->
    </div>
    <!-- End sign-up section -->
</section>

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>