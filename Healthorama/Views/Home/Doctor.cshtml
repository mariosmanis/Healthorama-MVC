@model Healthorama.Models.DOCTOR


<link href="~/Content/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css" />



<div class="main">
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure>
                        <img src="~/Images/signup-image.jpg" alt="Sign in image" />
                    </figure>
                </div>
                <div class="signin-form">
                    <h2 class="form-title">Sign in</h2>
                    @using (Html.BeginForm("AuthorizeDoctor", "Home", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.EditorFor(model => model.doctorAMKA, new { htmlAttributes = new { @Placeholder = "AMKA" } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.doctorPassword, new { htmlAttributes = new { @Placeholder = "Password", @Type = "password" } })
                        </div>
                        <div>
                            <input type="submit" name="name" value="Login" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>


<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>